{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "outDir": "../dist", // distは1つ上の階層に出す
    "rootDir": "." // このフォルダ(server/)をルートとして扱う
  },
  "include": ["**/*.ts"], // ← server配下すべて
  "exclude": ["../dist"] // 生成物を除外
}
