{
  "prisma": {
    "schema": "server/prisma/schema.prisma"
  },
  "scripts": {
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "build": "npx prisma generate && npx tsc -p server/tsconfig.json",
    "start": "node dist/server.js",
    "dev": "cd server && ts-node-dev --respawn --transpile-only server.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tailwindcss/vite": "^4.1.14",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/node": "^24.10.0"
  }
}
