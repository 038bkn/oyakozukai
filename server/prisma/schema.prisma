generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id Int @id @default(autoincrement())
  user_name String
  role String // "parent" | "child"
  email String @unique
  password_hash String
}

model Request {
  request_id Int @id @default(autoincrement())
  child_user_id Int
  amount Decimal
  reason String
  requested_at DateTime @default(now())
}

model Approval {
  approval_id Int @id @default(autoincrement())
  request_id Int @unique
  approver_user_id Int
  status String // "approved" | "rejected"
  decided_at DateTime @default(now())
}

model StandingOrder {
  standing_order_id Int @id @default(autoincrement())
  child_user_id Int
  amount Decimal
  name String
  interval String // "weekly" | "biweekly" | "monthly"
  start_date DateTime
  is_active Boolean
}

model Transaction {
  transaction_id Int @id @default(autoincrement())
  amount Decimal
  transacted_at DateTime @default(now())
  sender_user_id Int
  recipient_user_id Int
  approval_id Int? @unique
  standing_order_id  Int?
}